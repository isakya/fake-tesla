        </view>
      </view>
      <tesla-input required label="电子邮件" />
      <tesla-input required label="手机号码" />

      <picker bindchange="bindProvinceChange" value="{{province}}" range="{{provinces}}">
        <tesla-input required label="省份" value="{{provinces[province]}}" />
      </picker>
      <picker bindchange="bindCityChange" value="{{city}}" range="{{cities}}">
        <tesla-input required label="城市" value="{{cities[city]}}" />
      </picker>

/* pages/product/index.wxss */

.page {

}

.header {
  width: 100%;
  height: 744rpx;
  position: relative;
}

.header .cover {
  width: 100%;
  height: 100%;
}

.header .title {
  position: absolute;
  top: 110rpx;
  text-align: center;
  width: 100%;
  font-size: 54rpx;
  font-weight: bold;
}

.content {
  margin-top: 52rpx;
  padding: 0 48rpx;
}


.product-box {
  margin-top: 112rpx;
  width: 328rpx;
  float: left;
}

.product-box .name {
  font-size: 28rpx;
  line-height: 50rpx;
  width: 280rpx;
  height: 104rpx;
  overflow: hidden;
  font-weight: bold;
  /* 控制为两行 */
  line-clamp: 2;
  border-bottom: 2rpx solid #c3c3c3;
}

.product-box .config {
  margin-top: 44rpx;
}

.product-box .config .label {
  font-size: 24rpx;
  color: #c3c3c3;
  margin-bottom: 28rpx;
}

.product-box .config .value {
  font-size: 28rpx;
}
